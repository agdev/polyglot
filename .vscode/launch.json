{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/streamlit_app/main.py",  // Adjust path if needed
                "--server.port",
                "8501"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "STREAMLIT_LOG_LEVEL": "debug"
            },
            "stopOnEntry": false
        }
    ]
}
